---
:backends:
  - yaml
  - http

:hierarchy:
  - "nodes/%{fqdn}"
  - "roles/%{role_id}"
  - "ostypes/%{osfamily}"
  - defaults

:yaml:
  :datadir: "/vagrant/puppet-gonzo-demo/hieradata"

:http:
  :host: <%= @enc_server %>
  :port: 5984
  :output: json
  :failure: graceful
  :paths:
    - /configuration/%{fqdn}
    - /configuration/common